<UserControl x:Class="Editty.UserControls.MediaHandlerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Editty.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid FocusManager.IsFocusScope="True">
        <StackPanel Orientation="Vertical">
            <Button Margin="0 15 0 0" Width="110" Height="90" Padding="0" Background="Transparent" BorderBrush="Black"
                    Command="{Binding InsertImageCommand}" CommandParameter="{Binding TextBox}">
                <StackPanel Margin="5">
                    <Image Source="../images/icons/add-image.png" Width="50"></Image>
                    <TextBlock Padding="0" Margin="0 5 0 0">Изображение</TextBlock>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
